<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>采购管理</span>
        <a href="/purchase-orders/add" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> 创建采购订单
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>订单号</th>
                        <th>供应商</th>
                        <th>订单日期</th>
                        <th>预期交付日期</th>
                        <th>总金额</th>
                        <th>状态</th>
                        <th>创建人</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.id %></td>
                        <td><%= order.order_number %></td>
                        <td><%= order.supplier_name || '-' %></td>
                        <td><%= moment(order.order_date).format('YYYY-MM-DD') %></td>
                        <td><%= order.expected_delivery_date ? moment(order.expected_delivery_date).format('YYYY-MM-DD') : '-' %></td>
                        <td>¥<%= order.total_amount || '0.00' %></td>
                        <td>
                            <span class="badge bg-<%= 
                                order.status === 'pending' ? 'secondary' : 
                                order.status === 'confirmed' ? 'info' : 
                                order.status === 'delivered' ? 'success' : 'danger' 
                            %>">
                                <%= 
                                    order.status === 'pending' ? '待处理' : 
                                    order.status === 'confirmed' ? '已确认' : 
                                    order.status === 'delivered' ? '已交付' : '已取消' 
                                %>
                            </span>
                        </td>
                        <td><%= order.created_by_name || '-' %></td>
                        <td><%= moment(order.created_at).format('YYYY-MM-DD HH:mm') %></td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>