<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>退租管理</span>
        <a href="/returns/add" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> 处理退租
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>订单号</th>
                        <th>客户名称</th>
                        <th>退租日期</th>
                        <th>设备状况</th>
                        <th>维修费用</th>
                        <th>罚金</th>
                        <th>总扣款</th>
                        <th>退款金额</th>
                        <th>处理人</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% returns.forEach(returnRecord => { %>
                    <tr>
                        <td><%= returnRecord.id %></td>
                        <td><%= returnRecord.order_number %></td>
                        <td><%= returnRecord.customer_name || '-' %></td>
                        <td><%= moment(returnRecord.return_date).format('YYYY-MM-DD') %></td>
                        <td>
                            <span class="badge bg-<%= 
                                returnRecord.condition_status === 'excellent' ? 'success' : 
                                returnRecord.condition_status === 'good' ? 'info' : 
                                returnRecord.condition_status === 'fair' ? 'warning' : 
                                returnRecord.condition_status === 'poor' ? 'danger' : 'dark' 
                            %>">
                                <%= 
                                    returnRecord.condition_status === 'excellent' ? '优秀' : 
                                    returnRecord.condition_status === 'good' ? '良好' : 
                                    returnRecord.condition_status === 'fair' ? '一般' : 
                                    returnRecord.condition_status === 'poor' ? '较差' : '损坏' 
                                %>
                            </span>
                        </td>
                        <td>¥<%= returnRecord.repair_cost || '0.00' %></td>
                        <td>¥<%= returnRecord.penalty_fee || '0.00' %></td>
                        <td>¥<%= returnRecord.total_deduction || '0.00' %></td>
                        <td>¥<%= returnRecord.refund_amount || '0.00' %></td>
                        <td><%= returnRecord.processed_by_name || '-' %></td>
                        <td><%= moment(returnRecord.created_at).format('YYYY-MM-DD HH:mm') %></td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/rental-orders/view/<%= returnRecord.rental_order_id %>" class="btn btn-outline-primary" title="查看订单详情">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>