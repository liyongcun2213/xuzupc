<%- include('../layout') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">合作伙伴管理</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/partners/add" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-plus-circle"></i> 新增合作伙伴
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">合作伙伴列表</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="partnersTable">
                        <thead class="table-dark">
                            <tr>
                                <th>公司名称</th>
                                <th>联系人</th>
                                <th>联系电话</th>
                                <th>佣金比例</th>
                                <th>状态</th>
                                <th>创建时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof partners !== 'undefined' && partners.length > 0) { %>
                                <% partners.forEach(partner => { %>
                                <tr>
                                    <td><%= partner.name %></td>
                                    <td><%= partner.contact_person || '-' %></td>
                                    <td><%= partner.phone || '-' %></td>
                                    <td><%= partner.commission_rate %>%</td>
                                    <td>
                                        <% if (partner.status === 'active') { %>
                                            <span class="badge bg-success">活跃</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">非活跃</span>
                                        <% } %>
                                    </td>
                                    <td><%= moment(partner.created_at).format('YYYY-MM-DD') %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/partners/edit/<%= partner.id %>" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i> 编辑
                                            </a>
                                            <% if (partner.status === 'active') { %>
                                                <button type="button" class="btn btn-outline-warning" onclick="toggleStatus(<%= partner.id %>, 'inactive')">
                                                    <i class="bi bi-pause"></i> 停用
                                                </button>
                                            <% } else { %>
                                                <button type="button" class="btn btn-outline-success" onclick="toggleStatus(<%= partner.id %>, 'active')">
                                                    <i class="bi bi-play"></i> 启用
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-4">暂无合作伙伴记录</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// 切换合作伙伴状态
function toggleStatus(partnerId, newStatus) {
    const actionText = newStatus === 'active' ? '启用' : '停用';
    
    if (confirm(`确定要${actionText}此合作伙伴吗？`)) {
        fetch('/partners/toggle-status/' + partnerId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(`${actionText}成功！`);
                location.reload();
            } else {
                alert(`${actionText}失败：` + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('操作失败，请稍后重试');
        });
    }
}
</script>