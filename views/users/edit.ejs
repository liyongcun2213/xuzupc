<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>编辑用户</span>
        <a href="/users" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> 返回列表
        </a>
    </div>
    <div class="card-body">
        <form action="/users/edit/<%= userToEdit.id %>" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">用户名 *</label>
                    <input type="text" class="form-control" name="username" value="<%= userToEdit.username %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">真实姓名 *</label>
                    <input type="text" class="form-control" name="real_name" value="<%= userToEdit.real_name %>" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">密码</label>
                    <input type="password" class="form-control" name="password" placeholder="留空表示不修改密码">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">角色</label>
                    <select class="form-select" name="role">
                        <option value="admin" <%= userToEdit.role === 'admin' ? 'selected' : '' %>>管理员</option>
                        <option value="finance" <%= userToEdit.role === 'finance' ? 'selected' : '' %>>财务</option>
                        <option value="sales" <%= userToEdit.role === 'sales' ? 'selected' : '' %>>业务员</option>
                        <option value="guest" <%= userToEdit.role === 'guest' ? 'selected' : '' %>>访客（仅可访问仪表板）</option>
                    </select>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">邮箱</label>
                    <input type="email" class="form-control" name="email" value="<%= userToEdit.email || '' %>">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">电话</label>
                    <input type="tel" class="form-control" name="phone" value="<%= userToEdit.phone || '' %>">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">状态</label>
                <select class="form-select" name="status">
                    <option value="active" <%= userToEdit.status === 'active' ? 'selected' : '' %>>活跃</option>
                    <option value="inactive" <%= userToEdit.status === 'inactive' ? 'selected' : '' %>>停用</option>
                </select>
            </div>
            <div class="d-flex justify-content-end">
                <a href="/users" class="btn btn-secondary me-2">取消</a>
                <button type="submit" class="btn btn-primary">保存更改</button>
            </div>
        </form>
    </div>
</div>

</main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>