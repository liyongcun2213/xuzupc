<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>用户管理</span>
        <a href="/users/add" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> 添加用户
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>用户名</th>
                        <th>真实姓名</th>
                        <th>角色</th>
                        <th>邮箱</th>
                        <th>电话</th>
                        <th>状态</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.real_name %></td>
                        <td>
                            <span class="badge bg-<%= 
                                user.role === 'admin' ? 'danger' : 
                                user.role === 'finance' ? 'warning' : 
                                user.role === 'sales' ? 'info' : 'secondary' 
                            %>">
                                <%= 
                                    user.role === 'admin' ? '管理员' : 
                                    user.role === 'finance' ? '财务' : 
                                    user.role === 'sales' ? '业务员' : '访客' 
                                %>
                            </span>
                        </td>

                        <td><%= user.email || '-' %></td>
                        <td><%= user.phone || '-' %></td>
                        <td>
                            <span class="badge bg-<%= user.status === 'active' ? 'success' : 'secondary' %>">
                                <%= user.status === 'active' ? '活跃' : '停用' %>
                            </span>
                        </td>
                        <td><%= moment(user.created_at).format('YYYY-MM-DD') %></td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/users/edit/<%= user.id %>" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger" onclick="deleteUser(<%= user.id %>)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
function deleteUser(id) {
    if (confirm('确定要删除这个用户吗？此操作不可恢复。')) {
        fetch(`/users/delete/${id}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                // 删除成功，刷新页面
                window.location.reload();
            } else {
                alert('删除失败，请稍后再试。');
            }
        })
        .catch(error => {
            console.error('删除错误:', error);
            alert('删除失败，请稍后再试。');
        });
    }
}
</script>
</body>
</html>