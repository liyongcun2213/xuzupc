<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>客户管理</span>
        <a href="/customers/add" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> 添加客户
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>客户名称</th>
                        <th>联系人</th>
                        <th>电话</th>
                        <th>邮箱</th>
                        <th>信用等级</th>
                        <th>状态</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(customer => { %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td><%= customer.name %></td>
                        <td><%= customer.contact_person || '-' %></td>
                        <td><%= customer.phone || '-' %></td>
                        <td><%= customer.email || '-' %></td>
                        <td>
                            <span class="badge bg-<%= 
                                customer.credit_level === 'A' ? 'success' : 
                                customer.credit_level === 'B' ? 'info' : 
                                customer.credit_level === 'C' ? 'warning' : 'danger' 
                            %>"><%= customer.credit_level %>级</span>
                        </td>
                        <td>
                            <span class="badge bg-<%= customer.status === 'active' ? 'success' : 'secondary' %>">
                                <%= customer.status === 'active' ? '活跃' : '停用' %>
                            </span>
                        </td>
                        <td><%= moment(customer.created_at).format('YYYY-MM-DD') %></td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/customers/detail/<%= customer.id %>" class="btn btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/customers/edit/<%= customer.id %>" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger" onclick="deleteCustomer(<%= customer.id %>)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
function deleteCustomer(id) {
    if (confirm('确定要删除这个客户吗？此操作不可恢复。')) {
        fetch(`/customers/delete/${id}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                // 删除成功，刷新页面
                window.location.reload();
            } else {
                alert('删除失败，请稍后再试。');
            }
        })
        .catch(error => {
            console.error('删除错误:', error);
            alert('删除失败，请稍后再试。');
        });
    }
}
</script>
</body>
</html>