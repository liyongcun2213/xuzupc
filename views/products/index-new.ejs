<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>产品型号管理</div>
        <div>
            <a href="/products/add" class="btn btn-primary">添加产品型号</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>产品编号</th>
                        <th>产品名称</th>
                        <th>产品型号</th>
                        <th>类别</th>
                        <th>总采购价</th>
                        <th>日租金</th>
                        <th>月租金</th>
                        <th>状态</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products.length === 0) { %>
                    <tr>
                        <td colspan="10" class="text-center">暂无产品数据</td>
                    </tr>
                    <% } else { %>
                        <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.product_code || '-' %></td>
                            <td><%= product.name %></td>
                            <td><%= product.model_number || '-' %></td>
                            <td><%= product.category_name %></td>
                            <td>¥<%= (product.total_price || 0).toFixed(2) %></td>
                            <td>¥<%= (product.calculated_daily_rent || 0).toFixed(2) %></td>
                            <td>¥<%= (product.calculated_monthly_rent || 0).toFixed(2) %></td>
                            <td>
                                <% if (product.status === 'active') { %>
                                    <span class="badge bg-success">启用</span>
                                <% } else { %>
                                    <span class="badge bg-danger">禁用</span>
                                <% } %>
                            </td>
                            <td><%= moment(product.created_at).format('YYYY-MM-DD') %></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/products/view/<%= product.id %>" class="btn btn-sm btn-outline-info">详情</a>
                                    <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-outline-secondary">编辑</a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteProduct(<%= product.id %>)">删除</button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
function deleteProduct(productId) {
    if (confirm('确定要删除这个产品型号吗？此操作不可恢复！')) {
        fetch('/products/delete/' + productId, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('删除失败，请稍后再试');
            }
        })
        .catch(error => {
            console.error('删除错误:', error);
            alert('删除失败，请稍后再试');
        });
    }
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>