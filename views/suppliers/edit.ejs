<%- include('../layout') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>编辑供应商</span>
        <a href="/suppliers" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> 返回列表
        </a>
    </div>
    <div class="card-body">
        <form action="/suppliers/edit/<%= supplier.id %>" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">供应商名称 *</label>
                    <input type="text" class="form-control" name="name" value="<%= supplier.name %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">联系人</label>
                    <input type="text" class="form-control" name="contact_person" value="<%= supplier.contact_person || '' %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">电话</label>
                    <input type="tel" class="form-control" name="phone" value="<%= supplier.phone || '' %>">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">邮箱</label>
                    <input type="email" class="form-control" name="email" value="<%= supplier.email || '' %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">银行账号</label>
                    <input type="text" class="form-control" name="bank_account" value="<%= supplier.bank_account || '' %>">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">状态</label>
                    <select class="form-select" name="status">
                        <option value="active" <%= supplier.status === 'active' ? 'selected' : '' %>>活跃</option>
                        <option value="inactive" <%= supplier.status === 'inactive' ? 'selected' : '' %>>停用</option>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">地址</label>
                <textarea class="form-control" name="address" rows="3"><%= supplier.address || '' %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">营业执照</label>
                <input type="text" class="form-control" name="business_license" value="<%= supplier.business_license || '' %>">
            </div>
            <div class="d-flex justify-content-end">
                <a href="/suppliers" class="btn btn-secondary me-2">取消</a>
                <button type="submit" class="btn btn-primary">保存更改</button>
            </div>
        </form>
    </div>
</div>

</main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>