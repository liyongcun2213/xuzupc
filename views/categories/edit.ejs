<%- include('../layout') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">编辑产品类别</h1>
</div>

<div class="card">
    <div class="card-header">
        编辑类别
    </div>
    <div class="card-body">
        <form action="/categories/edit/<%= category.id %>" method="post" id="categoryForm">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="name" class="form-label">类别名称 <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="description" class="form-label">描述</label>
                    <textarea class="form-control" id="description" name="description" rows="3"><%= category.description || '' %></textarea>
                </div>
            </div>
            
            <div class="d-flex justify-content-end">
                <a href="/categories" class="btn btn-secondary me-2">取消</a>
                <button type="submit" class="btn btn-primary">保存</button>
            </div>
        </form>
    </div>
</div>

<script>
document.getElementById('categoryForm').addEventListener('submit', function(e) {
    const name = document.getElementById('name').value.trim();
    if (!name) {
        e.preventDefault();
        alert('请输入类别名称');
        return false;
    }
});
</script>